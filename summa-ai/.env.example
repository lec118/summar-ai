# Summa AI - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control!

# ========================================
# Speech-to-Text Configuration
# ========================================
STT_PROVIDER=openai
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-YOUR_OPENAI_API_KEY_HERE
OPENAI_STT_MODEL=whisper-1

# Alternative: Use local Whisper proxy
# STT_PROVIDER=whisper
# WHISPER_ENDPOINT=http://localhost:9000/transcribe

# ========================================
# Redis Configuration (Required for Workers)
# ========================================
REDIS_URL=redis://127.0.0.1:6379

# ========================================
# Embeddings Configuration
# ========================================
# Uses same OPENAI_API_KEY as above
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# ========================================
# Summarization LLM Configuration
# ========================================
SUMM_LLM=openai            # Options: openai | anthropic

# For OpenAI (uses same OPENAI_API_KEY)
SUMM_OPENAI_MODEL=gpt-4-turbo

# For Anthropic Claude
SUMM_ANTHROPIC_MODEL=claude-3-5-sonnet-20240620
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=YOUR_ANTHROPIC_API_KEY_HERE

# ========================================
# API Server Configuration
# ========================================
PORT=4000
# For production, set allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ========================================
# Cost Tracking (Optional)
# ========================================
COST_STT_PER_MIN=0.006
COST_EMBED_PER_1K=0.00013
COST_LLM_PER_1K=0.003

# ========================================
# RAG Configuration
# ========================================
ALIGN_THRESHOLD=0.7

# ========================================
# Vision API Configuration (for PDF Slides)
# ========================================
USE_VISION=true               # Enable/disable Vision API for slide analysis
VISION_PROVIDER=openai        # Options: openai | anthropic
# For OpenAI (uses same OPENAI_API_KEY)
VISION_MODEL=gpt-4o           # Or: gpt-4-vision-preview, gpt-4-turbo
# For Anthropic (uses same ANTHROPIC_API_KEY)
# VISION_MODEL=claude-3-5-sonnet-20241022
