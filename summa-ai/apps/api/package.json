{
  "name": "@summa/api",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "worker": "tsx watch src/worker.ts",
    "build": "tsup src/server.ts src/worker.ts --format esm --outDir dist --external @summa/shared --external @summa/slides --external @summa/embeddings --external @summa/stt --external @summa/summarizer",
    "start": "node dist/server.js",
    "start:worker": "node dist/worker.js",
    "start:all": "concurrently \"npm run start\" \"npm run start:worker\"",
    "start:prod": "npm run build && npm run start:all",
    "test": "vitest run",
    "lint": "eslint ."
  },
  "dependencies": {
    "@fastify/multipart": "^8.1.0",
    "@summa/embeddings": "workspace:*",
    "@summa/shared": "workspace:*",
    "@summa/slides": "workspace:*",
    "@summa/summarizer": "workspace:*",
    "@summa/stt": "workspace:*",
    "bullmq": "^5.29.0",
    "concurrently": "^9.1.0",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "@fastify/cors": "^9.0.0",
    "fastify-plugin": "^4.5.1",
    "ioredis": "^5.4.1",
    "formdata-node": "^6.0.3",
    "node-fetch": "^3.3.2",
    "pdfjs-dist": "^4.7.76",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.8.1",
    "tsup": "^8.5.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  }
}
