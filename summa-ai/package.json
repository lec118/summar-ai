{
  "name": "summa-ai",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -n API,WORKER,WEB -c cyan,yellow,magenta \"pnpm --filter @summa/api dev\" \"pnpm --filter @summa/api worker\" \"pnpm --filter @summa/web dev\"",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "concurrently": "^9.0.0",
    "prisma": "^6.18.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@prisma/client": "^6.18.0"
  }
}
