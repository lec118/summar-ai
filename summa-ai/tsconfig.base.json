{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@summa/shared": ["packages/shared/src/index.ts"],
      "@summa/shared/*": ["packages/shared/src/*"],
      "@summa/slides": ["packages/slides/src/index.ts"],
      "@summa/slides/*": ["packages/slides/src/*"],
      "@summa/embeddings": ["packages/embeddings/src/index.ts"],
      "@summa/embeddings/*": ["packages/embeddings/src/*"],
      "@summa/stt": ["packages/stt/src/index.ts"],
      "@summa/stt/*": ["packages/stt/src/*"],
      "@summa/summarizer": ["packages/summarizer/src/index.ts"],
      "@summa/summarizer/*": ["packages/summarizer/src/*"]
    }
  }
}
